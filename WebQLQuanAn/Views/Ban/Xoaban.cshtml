@model WebQLQuanAn.Models.BAN

@{
    ViewBag.Title = "Xóa bàn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h1>Xóa bàn</h1>

                <h3>Bạn có chắc là muốn xóa bàn này???</h3>
                <div>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                           Tên bàn
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TenBan)
                        </dd>

                        <dt>
                            Loại bàn
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.LoaiBan)
                        </dd>

                        <dt>
                           Trạng thái
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TrangThai)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <button type="submit" class="btn btn-gradient-primary me-2">XÓA</button>
                    }
                    <br />
                    <button class="btn btn-light"> @Html.ActionLink("Cancel", "Danhsachban")</button>
                </div>
            </div>
        </div>
    </div>
</div>
