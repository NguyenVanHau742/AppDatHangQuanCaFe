@model WebQLQuanAn.Models.TAIKHOAN


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Assets/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Assets/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/Assets/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/Assets/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="~/Assets/assets/images/logo.svg">
                            </div>
                            <h4>Trang quản lý nhà hàng Tít Trên Mây</h4>
                            <h6 class="font-weight-light">Sign in to continue.</h6>


                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <input type="text" name="user" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                                </div>
                                <div class="form-group">
                                   @ViewBag.Error
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Đăng nhập</button>
                                </div>
                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input"> Remember me
                                        </label>
                                    </div>
                                    <a href="#" class="auth-link text-black">Forgot password?</a>
                                </div>
                            </form>


                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>

    <script src="~/Assets/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/Assets/assets/js/off-canvas.js"></script>
    <script src="~/Assets/assets/js/hoverable-collapse.js"></script>
    <script src="~/Assets/assets/js/misc.js"></script>
    <!-- endinject -->
</body>
</html>


