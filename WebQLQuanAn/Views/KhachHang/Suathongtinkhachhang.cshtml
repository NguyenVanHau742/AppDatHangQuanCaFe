@model WebQLQuanAn.Models.KHACHHANG

@{
    ViewBag.Title = "Sửa thông tin khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Assets/assets/css/table.css">
</head>

<div class="content-wrapper">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h2>Sửa thông tin khách hàng</h2>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaKH)

                <div class="form-group">
                    <label class="control-label col-md-2">Tên khách hàng</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Số điện thoại</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                    </div>
                </div>

                <button type="submit" class="btn btn-gradient-primary me-2">CHỈNH SỬA</button>
                <button class="btn btn-light"> @Html.ActionLink("Cancel", "Danhsachkhachhang")</button>
            </div>
                }
            </div>
        </div>
    </div>
</div>
