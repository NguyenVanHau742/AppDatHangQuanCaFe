@model WebQLQuanAn.Models.KHACHHANG

@{
    ViewBag.Title = "Xóa khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/Assets/assets/css/table.css">
</head>

<div class="content-wrapper">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h1>Xóa khách hàng</h1>

                <h3>Bạn có chắc là xóa khách hàng này không???</h3>
                <div>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            Tên khách hàng
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TenKH)
                        </dd>

                        <dt>
                            Số điện thoại
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.SDT)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <button type="submit" class="btn btn-gradient-primary me-2">XÓA</button>

                    }
                    <button class="btn btn-light"> @Html.ActionLink("Cancel", "Danhsachkhachhang")</button>
                </div>
            </div>
        </div>
    </div>
</div>
