@model WebQLQuanAn.Models.SANPHAM

@{
    ViewBag.Title = "Thông tin sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h1>Thông tin sản phẩm</h1>

                <div>

                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            Tên loại sản phẩm
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.LOAISP.TenLoai)
                        </dd>

                        <dt>
                            Tên sản phẩm
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TenSP)
                        </dd>

                        <dt>
                            Đơn giá
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DonGia)
                        </dd>

                        <dt>
                            Đơn vị
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DonVi)
                        </dd>

                        <dt>
                            Mô tả
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.MoTa)
                        </dd>

                    </dl>
                </div>
                <p>
                    <button class="btn btn-gradient-primary me-2">@Html.ActionLink("Sửa thông tin", "Suathongtinsanpham", new { id = Model.MaSP })</button>
                    <button class="btn btn-light"> @Html.ActionLink("Cancel", "Danhsachsanpham")</button>
                </p>

            </div>
        </div>
    </div>
</div>
